<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Test" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/background</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Other -->
    <style name="Click">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <!-- Labels -->
    <style name="Title1" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginTop">@dimen/lb_small_vertical_margin</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title2" parent="Widget.MaterialComponents.TextView">
        <item name="android:drawableTint">@color/primary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/lb_horizontal_padding</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TabletTitle1" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginTop">@dimen/lb_small_vertical_margin</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabletTitle2" parent="Widget.MaterialComponents.TextView">
        <item name="android:drawableTint">@color/primary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">19sp</item>
        <item name="android:paddingStart">@dimen/lb_horizontal_padding</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabletBody1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">19sp</item>
    </style>

    <!-- Cards -->
    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_marginStart">@dimen/cv_large_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/cv_large_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/cv_vertical_margin</item>
        <item name="android:elevation">@dimen/cv_elevation</item>
        <item name="cardCornerRadius">@dimen/cv_normal_border</item>
        <item name="android:background">@color/background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <!-- Shapes -->
    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>


</resources>